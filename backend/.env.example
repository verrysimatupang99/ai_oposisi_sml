# Application Settings
APP_NAME=AI Tokoh Oposisi & Intelektual Kritis
APP_VERSION=2.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
# Development (SQLite - default)
DATABASE_URL=sqlite:///./ai_oposisi.db

# Production (PostgreSQL - uncomment when ready)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_oposisi

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
LM_STUDIO_URL=http://192.168.110.162:1234
LM_STUDIO_MODEL=meta-llama-3-8b-instruct-bpe-fix
LM_STUDIO_TIMEOUT=60
LM_STUDIO_MAX_TOKENS=4000
LM_STUDIO_TEMPERATURE=0.7

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]
ALLOWED_HOSTS=["localhost","0.0.0.0","127.0.0.1"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Ethics Configuration
ETHICS_ENABLED=true
ETHICS_STRICT_MODE=true
CONTENT_FILTER_ENABLED=true

# Persona Configuration
PERSONA_NAME=Dr. Arjuna Wibawa
PERSONA_DESCRIPTION=Intelektual kritis dan tokoh oposisi virtual
PERSONA_COMMUNICATION_STYLE=formal

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["text/plain","application/pdf","text/markdown"]

# Cache
CACHE_TTL=300

# External APIs (optional)
# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_API_KEY=your-google-api-key
